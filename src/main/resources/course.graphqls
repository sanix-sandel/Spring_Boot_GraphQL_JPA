type Course{
    id: ID!
    title: String!
    description: String!
    author: Author
}

extend type Query{
    findAllCourses: [Course]!
    countCourses: Long!
}

extend type Mutation{
    createCourse(title: String!, description: String, author:ID!): Course!
    updateCourse(id: ID!, title: String, description:String): Course!
    deleteCourse(id: ID!): Boolean
}